# EditorConfig helps maintain consistent coding styles
# More info: https://editorconfig.org/

root = true

[*]
charset = utf-8
end_of_line = lf
insert_final_newline = true
indent_style = tab
trim_trailing_whitespace = true
max_line_length = 80

[*.{yml,yaml}]
indent_style = space
indent_size = 2

[*.md]
indent_style = unset
trim_trailing_whitespace = false
max_line_length = off
