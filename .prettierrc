{
	"semi": true,
	"useTabs": true,
	"tabWidth": 4,
	"singleQuote": false,
	"trailingComma": "all",
	"bracketSpacing": true,
	"singleAttributePerLine": true,
	"quoteProps": "consistent",
	"proseWrap": "preserve",
	"printWidth": 80,
	"arrowParens": "always",
	"endOfLine": "lf",

	"overrides": [
		{
			"files": "*.{yml,yaml}",
			"options": {
				"useTabs": false,
				"tabWidth": 2
			}
		},
		{
			"files": "*.json",
			"options": {
				"useTabs": false,
				"tabWidth": 2
			}
		}
	]
}
